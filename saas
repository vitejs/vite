    <script>
        let credits = 3;

        async function generateImage() {
            const prompt = document.getElementById('prompt-input').value;
            if (prompt.length < 5) return alert("Por favor, descreve o que queres gerar!");
            
            if (credits <= 0) {
                openCheckout();
                return;
            }

            const btn = document.getElementById('gen-btn');
            const loader = document.getElementById('loader');
            const resultImg = document.getElementById('result-image');
            const placeholder = document.getElementById('placeholder-content');
            const actionBtns = document.getElementById('action-buttons');

            // Iniciar anima√ß√£o
            btn.disabled = true;
            btn.style.opacity = "0.5";
            loader.classList.remove('hidden');
            placeholder.classList.add('hidden');
            resultImg.classList.add('hidden');
            actionBtns.classList.add('hidden');

            try {
                // Simula√ß√£o de IA (4 segundos)
                await new Promise(r => setTimeout(r, 4000));
                
                // Gerar URL de imagem fict√≠cia mas realista (Unsplash)
                const randomId = Math.floor(Math.random() * 1000);
                resultImg.src = `https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?auto=format&fit=crop&q=80&w=800&sig=${randomId}`;
                
                resultImg.onload = () => {
                    loader.classList.add('hidden');
                    resultImg.classList.remove('hidden');
                    actionBtns.classList.remove('hidden');
                    credits--;
                    document.getElementById('credit-count').innerText = credits;
                    btn.disabled = false;
                    btn.style.opacity = "1";
                };
            } catch (e) {
                alert("Erro ao conectar √† IA. Tenta novamente.");
                btn.disabled = false;
            }
        }

        function openCheckout() {
            document.getElementById('checkout-modal').classList.remove('hidden');
            document.getElementById('checkout-modal').classList.add('flex');
        }

        function closeCheckout() {
            document.getElementById('checkout-modal').classList.add('hidden');
            document.getElementById('checkout-modal').classList.remove('flex');
        }

        function goToStripe() {
            // Substituir pelo teu link real do Stripe quando o tiveres
            alert("A redirecionar para o Checkout Seguro do Stripe...");
            // window.location.href = "https://buy.stripe.com/teu-link-aqui";
        }
    </script>
